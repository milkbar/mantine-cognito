{
    "include": ["src", "@types/node"],
    "compilerOptions": {
        "rootDir": "./src",
        "target": "es6",
        "module": "esnext",
        "jsx": "react-jsx",
        "composite": true,
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,

        "sourceMap": true,
        "strict": true,
    }
}